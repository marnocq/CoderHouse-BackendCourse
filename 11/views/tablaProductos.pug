html
  head
    link#bootstrap-css(href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css' rel='stylesheet')
    script(src='//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js')
    script(src='//code.jquery.com/jquery-1.11.1.min.js')
  body
    .container
      .row
        .span5                                                
          table.table.table-striped.table-condensed
            thead
              tr
                th Id
                th Title
                th Price
                th Thumbnail
            tbody
                each val in productos
                    tr
                        td= val.id
                        td= val.title
                        td= val.price
                        td
                            img(width='16px' src=val.thumbnail)
