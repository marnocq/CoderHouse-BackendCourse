<html>
    <div class="container">
        <div class="row">
            <div class="col-2">
                <div class="span text-center">
                    <form action="" method="" style="margin-top: 10px; margin: 50% auto">
                        <div class="controls controls-row">
                            <input id="title" name="title" type="text" class="span3" placeholder="Titulo"> 
                        </div>
                        <div class="controls controls-row">
                            <input id="price" name="price" type="text" class="span3" placeholder="Price">
                        </div>
                        <div class="controls controls-row">
                            <input id="thumbnail" name="thumbnail" type="text" class="span3" placeholder="Thumbnail">
                        </div>
                        <div class="controls">
                            <button type="button" class="btn btn-primary input-medium pull-right" onclick="enviar()">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>        
    </div>
    <div class="container">
        {{> tablaProductos }}
    </div>       
    <div class="container">
        {{> chat }}
    </div>     
    <script>        
        async function enviar(){           
                const producto = await fetch('/api/productos', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({                        
                        title: document.getElementById('title').value,
                        price: document.getElementById('price').value,
                        thumbnail: document.getElementById('thumbnail').value
                    })
                });                
                document.getElementById('title').value = '',
                document.getElementById('price').value = '',
                document.getElementById('thumbnail').value = '';
            }        
    </script>
</html>
