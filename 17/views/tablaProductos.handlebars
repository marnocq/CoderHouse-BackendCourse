<html>
    <div class="container">
        {{#if productos.length}}
            <div class="row">
                <div class="span5">
                    <table class="table table-striped table-condensed">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Price</th>
                            <th>Thumbnail</th>                        
                        </tr>
                    </thead>   
                    <tbody id="products">
                        {{#each productos}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.title}}</td>
                            <td>{{this.price}}</td>
                            <td><img width="16px" src="{{this.thumbnail}}"></td>                                       
                        </tr>             
                        {{/each}}                                          
                    </tbody>
                    </table>
                </div>
            </div>
        {{else}}
            <h3>No hay productos dispobibles</h3>
        {{/if}}    
    </div>
    <script type="application/javascript" src="http://localhost:8000/socket.io/socket.io.js"></script>
    <script>
        var socket = io.connect();
            socket.on('new-product', data => {
                let tbody = document.getElementById('products');
                tbody.insertRow().innerHTML = `
                    <td>${data.id}</td>
                    <td>${data.title}</td>
                    <td>$${data.price}</td>
                    <td>
                        <img src="${data.thumbnail}" width="16px"/>
                    </td>
                `
        });
    </script>
</html>